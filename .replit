modules = ["java"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Legacy Java App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "legacy-app-server"

[[workflows.workflow]]
name = "Legacy Java App Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean jetty:run"
waitForPort = 5000

[[workflows.workflow]]
name = "legacy-app-server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn jetty:run"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "mvn clean jetty:run"]

[[ports]]
localPort = 5000
externalPort = 80
